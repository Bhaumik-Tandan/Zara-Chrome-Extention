{
    "manifest_version": 3,
    "name": "E Commerce",
    "version": "1.0",
    "description": "This extension will help you to buy products online",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "E Commerce" 
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
  }